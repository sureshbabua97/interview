<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/simple/Product" method="GET">
        <service class="Interview\Task\Api\ProductCreationInterface" method="simpleProduct"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route url="/V1/configuration/Product" method="GET">
        <service class="Interview\Task\Api\ProductCreationInterface" method="configProduct"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
</routes>